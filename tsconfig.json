{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "baseUrl": ".",  
      "paths": {
        "@shared/*": ["../shared/*"]
      }
    },
    "include": ["server/**/*", "shared/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  