{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "baseUrl": ".",  
      "typeRoots": ["./node_modules/@types", "./@types"],
      "paths": {
        "@shared/*": ["../shared/*"]
      }
    },
    "include": ["**/*"],
    "exclude": ["dist", "node_modules"]
  }
  